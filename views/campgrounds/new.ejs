<% layout('layouts/boilerplate.ejs')%>
    <div class="row">
        <h1 class="text-center">Create a new Campground</h1>
        <div class="col-md-6 offset-md-3">
                    <form action="/campgrounds" method="POST" novalidate class="validated-form"
                        enctype="multipart/form-data">
                        <div class="form-group mb-3">
                            <label for="title">Title</label>
                            <input type="text" name="campground[title]" class="form-control" id="title"
                                placeholder="Enter title" required>
                            <div class="valid-feedback">Looks good !</div>
                        </div>
                        <div class="form-group mb-3">
                            <label for="location">Location</label>
                            <input type="text" name="campground[location]" class="form-control" id="location"
                                placeholder="Enter location" required>
                            <div class="valid-feedback">Looks good !</div>
                        </div>
                        <div class="mb-3">
                            <label for="price">Campground Price</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="price">$</span>
                                </div>
                                <input type="text" class="form-control" placeholder="0.00" id="price"
                                    name="campground[price]" required>
                                <div class="valid-feedback">Looks good !</div>
                            </div>
                        </div>

                        <div class="form-group mb-3">
                            <label for="description">Description</label>
                            <textarea name="campground[description]" class="form-control" id="description"
                                placeholder="Enter Campground description here" required></textarea>
                            <div class="valid-feedback">Looks good !</div>
                        </div>
                        <div class="mb-3">
                            <label for="image" class="form-label">Upload image(s)</label>
                            <input class="form-control" type="file" id="image" name="image" multiple>
                        </div>
                        <button type="submit" class="btn btn-success">Add Campground</button>
                        <a href="/campgrounds" class="btn btn-danger">Cancel</a>
                    </form>
                </div>
            </div>