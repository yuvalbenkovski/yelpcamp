<%layout('layouts/boilerplate.ejs')%>
    <div class="container d-flex justify-content-center align-items-center mt-5">
        <div class="row">
            <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
                <div class="card shadow">
                    <img class="card-img-top"
                        src="https://images.unsplash.com/photo-1464547323744-4edd0cd0c746?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1500&q=80"
                        alt="">
                    <div class="card-body">
                        <h5 class="card-title">Login</h5>
                        <form action="/login" method="POST" class="validated-form" novalidate>
                            <div class="mb-3">
                                <label class="form-label" for="username">Enter Username:</label>
                                <input type="text" name="username" class="form-control" id="username" required
                                    autofocus>
                                <div class="valid-feedback">Looks good !</div>
                            </div>
                            <div class="mb-3">
                                <label class="form-label" for="password">Enter Password:</label>
                                <input type="password" name="password" class="form-control" id="password" required>
                                <div class="valid-feedback">Looks good !</div>
                            </div>
                            <div class="d-grid"> <button class="btn btn-success btn-block">Login</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>